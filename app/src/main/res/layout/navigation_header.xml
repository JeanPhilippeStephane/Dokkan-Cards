<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/NavigationDrawerHeader">

    <ImageView
        android:id="@+id/menu_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/logo_transparent"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/menu_logo"
        android:layout_below="@+id/menu_logo"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="Dokkan Cards"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logo_text"
        android:layout_below="@+id/logo_text"
        android:fontFamily="monospace"
        android:paddingTop="2dp"
        android:text="@string/email"
        android:textColor="#cdffffff" />
</RelativeLayout>